<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">kirill_coins_coins_listing.kirill_coins_coins_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>kirill_coins_columns</spinner>
        <deps>
            <dep>kirill_coins_coins_listing.kirill_coins_coins_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="kirill_coins_coins_listing_data_source" component="Magento_Ui/js/grid/provider">
        <aclResource>Magento_Customer::manage</aclResource>
        <dataProvider class="Magento\Customer\Ui\Component\Listing\Address\DataProvider" name="kirill_coins_coins_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="kirill_coins_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="customer/index/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">kirill_coins_coins_listing.kirill_coins_coins_listing.coins_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">kirill_coins_coins_listing.kirill_coins_coins_listing.coins_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="id" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Id</label>
            </settings>
        </column>
        <column name="order_id" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Order ID</label>
            </settings>
        </column>
        <column name="comment" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Comment</label>
            </settings>
        </column>
        <column name="coins" sortOrder="81">
            <settings>
                <filter>text</filter>
                <label translate="true">Coins</label>
            </settings>
        </column>
        <column name="insertion date" sortOrder="91">
            <settings>
                <filter>text</filter>
                <label translate="true">Insertion Date</label>
            </settings>
        </column>
    </columns>
</listing>
